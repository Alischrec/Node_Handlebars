{{!-- Burger Image --}}
<div>
    <img src='/assets/images/burger.png'>
</div>

<div class='row'>
    {{!-- List for Current Burgers: --}}
    <div class='col-md-6' id='currentBurgers'>
        <ul>

            {{#each burgers}}
            {{#unless devoured}}

            <div> {{burger_name}} </div>
            <form action='/api/burger/devoured' method='post'>
                <button type='submit' name='devoured' class='btn btn-primary' value='{{id}}'>Devour</button>
            </form>

            {{/unless}}
            {{/each}}

        </ul>
    </div>

    {{!-- List for Devoured Burgers --}}
    <div class='col-md-6' id='devouredBurgers'>
        <ul>

            {{#each burgers}}
            {{#if devoured}}

            <div> {{burger_name}} </div>
            </form>

            {{/if}}
            {{/each}}

        </ul>
    </div>
</div>

{{!-- Submit a New Burger --}}
<div id='newBurger'>
    <form id='burgerForm' action='/api/burger/new' method='post'>
        <input type='text' id='burgerName' name='burgerName'><br><br>
        <button type='submit' class='btn btn-primary'>Submit</button>
        <p>Enter a burger you want to eat, then click the 'Submit' button</p>
    </form>
</div>